<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="ngo.sapne.intents.sapne.FragmentJoinUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff19"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="#f8f9fa"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">


                <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/activity_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"

                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context="com.example.intents.sapne.ngo.example.intents.sapne.MainActivity">


                    <ImageButton
                        android:id="@+id/etName"
                        android:layout_width="148dp"
                        android:layout_height="32dp"
                        android:src="@drawable/invite" />

                    <ImageButton
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="112dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/grp" />

                    <RadioGroup
                        android:id="@+id/rgSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:background="#ffff19"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="#f8f9fa"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/activity_main1"
                    android:layout_width="match_parent"
                    android:layout_height="479dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"

                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    tools:context="com.example.intents.sapne.ngo.example.intents.sapne.MainActivity">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <Button
                        android:id="@+id/button6"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:text="FMF Support"

                        android:backgroundTint="@color/white"/>

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:text="Cluster Hub"
                        android:layout_marginTop="80dp"
                        android:backgroundTint="@color/white"/>

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:text="Announcements"
                        android:layout_marginTop="80dp"
                        android:backgroundTint="@color/white"/>

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:layout_marginTop="80dp"
                        android:backgroundTint="@color/white"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

